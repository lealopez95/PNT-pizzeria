
<!DOCTYPE html>
<html lang="en" class="wide wow-animation">
<head>
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <!-- Site Title-->
    <title>@ViewBag.Title - Pizzaline</title>
    <!-- Stylesheets-->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Changa+One:400,400i%7CGrand+Hotel%7CLato:300,400,400italic,700">
    @Styles.Render("~/Content/css_piza")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <!-- Page-->
    <div class="page text-center">
        <!-- Page Header-->
        <header class="page-head">
            <!-- RD Navbar-->
            <div class="rd-navbar-wrap rd-navbar-default">
                <nav data-layout="rd-navbar-fixed" data-sm-layout="rd-navbar-fixed" data-md-device-layout="rd-navbar-fixed" data-lg-layout="rd-navbar-static" data-lg-device-layout="rd-navbar-static" data-stick-up-clone="false" data-md-stick-up-offset="100px" data-lg-stick-up-offset="150px" class="rd-navbar">
                    <div class="shell shell-fluid">
                        <div class="rd-navbar-inner">
                            <div class="rd-navbar-nav-wrap-outer">
                                <div class="rd-navbar-aside">
                                    <div class="rd-navbar-aside-content">
                                        <!-- RD Navbar Panel-->
                                        <div class="rd-navbar-panel rd-navbar-aside-left">
                                            <!-- RD Navbar Toggle-->
                                            <button data-rd-navbar-toggle=".rd-navbar-nav-wrap" class="rd-navbar-toggle"><span></span></button>
                                            <!-- RD Navbar Brand-->
                                            <a href="/" class="rd-navbar-brand brand">
                                                <div class="brand-logo">
                                                    <img src="~/Content/images/brand-232x49.png" alt="" width="232" height="49" />
                                                </div>
                                            </a>
                                        </div>
                                        <div class="rd-navbar-aside-right">
                                            <!-- RD Navbar Aside-->
                                            <ul class="list-links list-inline text-left">
                                                <li>
                                                    @if (Session["ID"] == null)
                                                    {
                                                        <a class="iconoUsuario" href="#" data-toggle="modal" data-target="#iniciarSesion"><i class="fas fa-user"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a class="iconoUsuario" href="#" data-toggle="modal" data-target="#cerrarSesion">@Session["Nombre"]</a>
                                                    }

                                                </li>
                                                <li>
                                                    <ul class="list-inline list-inline-sm">
                                                        <li><a href="http://instagram.com/nuestraPizzeria" class="link-silver-light"><span class="icon icon-sm-mod-1 fa fa-instagram"></span></a></li>
                                                        <li><a href="http://facebook.com/nuestraPizzeria" class="link-silver-light"><span class="icon icon-sm-mod-1 fa fa-facebook"></span></a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- RD Navbar Nav-->
                            <div class="rd-navbar-nav-wrap">
                                <!-- RD Navbar Shop-->
                                <div class="rd-navbar-shop">
                                    
                                    <a href="shop-cart.html" class="link link-shop link-default">
                                        <span class="big text-gray-light">Cart</span>
                                        <span class="icon icon-sm mdi mdi-cart-outline"></span>
                                        <span class="label-inline big text-white" id="cart-qty">
                                            @(Session["cartQty"] != null? Session["cartQty"]:0)
                                        </span>
                                    </a>
                                    
                                </div>
                                <!-- RD Navbar Nav-->
                                <ul class="rd-navbar-nav">
                                    <li>
                                        @Html.ActionLink("Pizzas", "Index", "Product", new { category = 0 }, null);
                                        <!--<a href="/pizzas.cshtml">Pizzas</a> -->
                                    </li>
                                    <li>
                                        @Html.ActionLink("Empanadas", "Index", "Product", new { category = 1 }, null);
                                        <!--<a href="/empanadas.cshtml">Empanadas</a>-->
                                    </li>
                                    <li>
                                        @Html.ActionLink("Bebidas", "Index", "Product", new { category = 2 }, null);
                                        <!--<a href="/bebidas.cshtml">Bebidas</a>-->
                                    </li>
                                    <li>
                                        @Html.ActionLink("Contacto", "Index", "Contacto");
                                        <!--<a href="/contacts.cshtml">Contacto</a>-->
                                    </li>
                                    <li>
                                        @Html.ActionLink("Nosotros", "About", "Home");
                                        <!--<a href="about.html">Nosotros</a>-->
                                    </li>
                                </ul>
                                <div class="rd-navbar-aside-right">
                                    <ul class="list-links list-inline text-left">
                                        <li>
                                            <ul class="list-inline list-inline-sm">
                                                <li><a href="#" class="link-silver-light"><span class="icon icon-sm-mod-1 fa fa-instagram"></span></a></li>
                                                <li><a href="#" class="link-silver-light"><span class="icon icon-sm-mod-1 fa fa-facebook"></span></a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <footer class="page-foot text-center text-lg-left footer-light context-dark">
            <section class="section-top-45 section-bottom-40">
                <div class="shell">
                    <div class="range range-xs-center">
                        <div class="cell-sm-8 cell-md-10 cell-lg-6">
                            <div class="group-md">
                                <h5 class="text-italic font-secondary">Suscribíte</h5><span>Recibí todas nuestras ofertas por mail</span>
                            </div>
                            <div class="offset-top-15">
                                <div class="form-box-shadow">
                                    <form data-form-output="form-output-global" data-form-type="subscribe" method="post" action="bat/rd-mailform.php" class="rd-mailform form-subscribe form-inline-flex-xs">
                                        <div class="form-group">
                                            <input placeholder="Tu Email" type="email" name="email" class="form-control">
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-shape-circle">Suscribir</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="cell-sm-6 cell-md-4 cell-lg-3 offset-top-30 offset-top-50 offset-lg-top-0">
                            <h5 class="text-italic font-secondary">Vení a Visitarnos</h5>
                            <ul class="list-links list-inline text-left no-margin">
                                <li>
                                    <div class="unit unit-horizontal unit-middle unit-spacing-xs">
                                        <div class="unit-left"><span class="icon icon-circle icon-gray-dark icon-xxs mdi mdi-map-marker text-middle"></span></div>
                                        <div class="unit-body">
                                            <address class="contact-info"><a href="https://www.google.com/maps/place/Yatay+240,+C1184ADD+CABA/&#64;-34.6099486,-58.4314188,17z/data=!3m1!4b1!4m5!3m4!1s0x95bcca680ba438df:0xbf0c145b9d69a22d!8m2!3d-34.609953!4d-58.4292301" target="_blank">Almagro - Yatay 240</a></address>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="unit unit-horizontal unit-middle unit-spacing-xs">
                                        <div class="unit-left"><span class="icon icon-circle icon-gray-dark icon-xxs mdi mdi-map-marker text-middle"></span></div>
                                        <div class="unit-body">
                                            <address class="contact-info"><a href="https://www.google.com/maps/place/Av.+Monroe+1234,+C1428BKL+CABA/&#64;-34.5513488,-58.4500022,17z/data=!3m1!4b1!4m5!3m4!1s0x95bcb4317b2a9e87:0xaefc23c2d4c73c06!8m2!3d-34.5513532!4d-58.4478135" target="_blank">Belgrano - Monroe 1234</a></address>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="unit unit-horizontal unit-middle unit-spacing-xs">
                                        <div class="unit-left"><span class="icon icon-circle icon-gray-dark icon-xxs mdi mdi-map-marker text-middle"></span></div>
                                        <div class="unit-body">
                                            <address class="contact-info"><a href="https://www.google.com/maps/place/Balcarce+50,+C1064+CABA/&#64;-34.6081982,-58.3724951,17z/data=!3m1!4b1!4m5!3m4!1s0x95a3352c95f0d4f5:0xee8dc0a5eb259e82!8m2!3d-34.6082026!4d-58.3703064" target="_blank">Monserrat - Balcarce 50</a></address>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="cell-sm-6 cell-md-4 cell-lg-3 offset-top-50 offset-lg-top-0">
                            <h5 class="text-italic font-secondary">Contáctenos</h5>
                            <div class="unit unit-sm-horizontal unit-sm-top unit-spacing-xs offset-top-15">
                                <div class="unit-left"><span class="icon icon-md-mod-1 icon-default mdi mdi-phone text-middle"></span></div>
                                <div class="unit-body">
                                    <address class="contact-info"><a href="callto:0800-666-6969" class="link-white link-lg">0800-666-6969</a></address><span class="contact-info">Todos los días 24/7</span>
                                </div>
                            </div>
                        </div>
                        @Html.ActionLink("Mandar Mail", "MandarMail", "Pedidos")
                    </div>
                </div>
            </section>
            <section>
                <div class="shell">
                    <hr>
                </div>
                <div class="shell section-20">
                    <div class="range range-xs-center">
                        <div class="cell-md-5 text-center">
                            <p class="copyright">
                                Delivery Comidas
                                &nbsp;&#169;&nbsp;Copyright&nbsp;<span id="copyright-year"></span>&nbsp;<br class="veil-sm">
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
    </div>

    <!--Modal Iniciar Sesion-->
    <div class="modal fade" id="iniciarSesion" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">Iniciar Sesión</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="Usuarios/Login">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="form-group">
                            <input type="password" id="Password" name="Password" class="form-control" required placeholder="Contraseña">
                        </div>

                        <button type="submit" class="btn btn-primary">Ingresar</button>
                        <a href="#" style="margin-left: 235px" class="btn btn-primary" data-toggle="modal" data-dismiss="modal" data-target="#registrarse">Registrarse</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--------------------------------------------------------------------------------------------------------------->

    <!--Modal Cerrar Sesion-->
    <div class="modal fade" id="cerrarSesion" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">¿Desea cerrar su sesión?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="Usuarios/Logout">
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-primary" style="margin-left: 140px">Cerrar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--------------------------------------------------------------------------------------------------------------->
    <!--Registrarse -->
    <div class="modal fade" id="registrarse" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Registro de Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="Usuarios/Create">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <input type="text" id="NombreApellido" name="NombreApellido" class="form-control" required placeholder="Nombre y Apellido">
                        </div>

                        <div class="form-group">
                            <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="form-group">
                            <input type="text" id="Direccion" name="Direccion" class="form-control" required placeholder="Direccion">
                        </div>

                        <div class="form-group">
                            <input type="password" id="PasswordReg" name="Password" class="form-control" required placeholder="Contraseña (8 caracteres mínimo)">
                            <label id="menos8Caracteres" class="alert-danger validaciones" style="display: none;">La contraseña debe tener como mínimo 8 caracteres.</label>
                        </div>

                        <div class="form-group">
                            <input type="password" id="ConfirmacionPassword" name="ConfirmacionPassword" class="form-control" required placeholder="Confirmar Contraseña">
                        </div>

                        <div class="form-group">
                            <input type="tel" id="Telefono" name="Telefono" class="form-control" required placeholder="Telefono Celular">
                        </div>

                        <input type="submit" id="botonRegistrarse" class="btn btn-primary" value="Registrarse">
                    </form>

                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery_piza")
    @RenderSection("Scripts", false)

</body>
</html>

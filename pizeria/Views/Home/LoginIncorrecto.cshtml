
@{
    ViewBag.Title = "Login Incorrecto";
}

<h4 style="margin-top: 40px">Login Incorrecto</h4>
<br />
<h5 style="margin-bottom: 40px">Su email de usuario y/o contraseña son incorrectos.</h5>

<!-- Espera 12 segundos y redirecciona a Home/Index -->
@section Scripts {
    <script>
        wait(15000);
        window.location.href = "/";

        function wait(ms) {
            var start = new Date().getTime();
            var end = start;
            while (end < start + ms) {
                end = new Date().getTime();
            }
        }
    </script>
}
